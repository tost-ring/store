<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="stack" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.RecordController">
    <children>
        <BorderPane>
         <center>
            <ScrollPane BorderPane.alignment="CENTER">
               <content>
                  <VBox fx:id="box" />
               </content>
            </ScrollPane>
         </center>
         <bottom>
            <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <children>
                   <Button mnemonicParsing="false" onAction="#saveAction" text="Zapisz" />
                   <Button mnemonicParsing="false" onAction="#cancelAction" text="Anuluj" />
               </children>
            </HBox>
         </bottom>
         <top>
            <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <children>
                  <Label text="Wybierz element" />
                  <ComboBox fx:id="element" prefWidth="150.0" />
               </children>
            </HBox>
         </top>
        </BorderPane>
    </children>
</StackPane>
