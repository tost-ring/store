<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>

<StackPane fx:id="stack" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.Welcome">
   <children>
      <BorderPane>
         <top>
            <GridPane hgap="10.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="NEVER" minWidth="10.0" />
                  <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
                  <ColumnConstraints hgrow="NEVER" minWidth="10.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="0.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <HBox fx:id="path" alignment="CENTER_LEFT" spacing="10.0" GridPane.columnSpan="3">
                     <padding>
                        <Insets bottom="2.0" left="10.0" right="10.0" />
                     </padding>
                  </HBox>
                  <TextField fx:id="searchText" alignment="CENTER_RIGHT" promptText="Wpisz szukany element..." GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" />
                  <Button mnemonicParsing="false" onAction="#clearSearchAction" text="Wyczyść" GridPane.columnIndex="2" GridPane.hgrow="NEVER" GridPane.rowIndex="1" />
                  <CheckBox fx:id="oneLevelCheckbox" mnemonicParsing="false" text="Tylko bezpośrednie" GridPane.rowIndex="1" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </GridPane>
         </top>
         <center>
            <ListView fx:id="list" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
         </center>
         <bottom>
            <GridPane hgap="10.0" onKeyPressed="#editorKeyAction" BorderPane.alignment="CENTER">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Button mnemonicParsing="false" onAction="#deleteSelectedAction" text="-" textOverrun="CLIP" GridPane.hgrow="NEVER" />
                  <TextField fx:id="selectedText" editable="false" maxWidth="1.7976931348623157E308" promptText="Wybrany element" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" />
                  <Button contentDisplay="RIGHT" mnemonicParsing="false" onAction="#editSelectedAction" text="=" textOverrun="CLIP" GridPane.columnIndex="2" GridPane.hgrow="NEVER" />
                  <TextField fx:id="editedText" maxWidth="1.7976931348623157E308" promptText="Nowa nazwa elementu" GridPane.columnIndex="3" GridPane.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" onAction="#createAction" text="+" textOverrun="CLIP" GridPane.columnIndex="4" GridPane.hgrow="NEVER" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </GridPane>
         </bottom>
      </BorderPane>
   </children>
</StackPane>
